<Window x:Class="MainWPF.VoucherTypeControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MainWPF"
        mc:Ignorable="d" Style="{StaticResource MyWindowStyle}"
        Title="VoucherTypeControl" Height="200" WindowStartupLocation="CenterScreen" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ComboBox Grid.Row="1" Grid.ColumnSpan="2" Margin="10,0" x:Name="cmbo">
            <ComboBoxItem Content="طابعة تيكيتس"/>
            <ComboBoxItem Content="ربع A4"/>
        </ComboBox>
        <TextBlock Grid.ColumnSpan="2" Text="شكل وصل التسليم" HorizontalAlignment="Center"/>
        <Button HorizontalAlignment="Right" Content="حفظ" Grid.Row="2" Grid.Column="1" Width="120" Click="Button_Click"/>
    </Grid>
</Window>

<Window x:Class="MainWPF.StudySideInsertControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="StudySideInsertControl" Height="170" Width="600" Style="{StaticResource MyWindowStyle}" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="81*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="283*"/>
            <ColumnDefinition Width="247*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="4,10" Text="يرجى إدخال اسم الجهة المستخدمة للبرنامج :" FontFamily="{StaticResource MyFontFamily}" FontSize="15"/>
        <TextBox x:Name="txtName" Grid.Column="1" Margin="8" FontSize="16"></TextBox>
        <Button Grid.Row="1" Grid.Column="1" Margin="5" FontSize="20" Click="Button_Click_1">موافق</Button>
    </Grid>
</Window>

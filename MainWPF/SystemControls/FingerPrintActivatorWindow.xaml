<Window x:Class="MainWPF.FingerPrintActivatorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FingerPrintActivatorWindow" Height="210" Width="300" Style="{StaticResource MyWindowStyle}" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="تفعيل البصمة الالكترونية" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,30,0,0"></TextBlock>
        <CheckBox x:Name="chk" HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource LargeCheckBox}"></CheckBox>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right">
            <Button Width="100" Height="30" Content="الغاء" Click="ButtonCancel_Click"></Button>
            <Button Width="100" Height="30" Content="حفظ" Click="ButtonSave_Click"></Button>
        </StackPanel>
    </Grid>
</Window>

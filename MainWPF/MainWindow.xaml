        <TransformGroup x:Key="btnTransformStyle">
            <ScaleTransform/>
        </TransformGroup>
        <LinearGradientBrush x:Key="MyBrushMainWindow"  StartPoint="0.5,0.5"  EndPoint="0,0" SpreadMethod="Reflect">
            <GradientStop Color="#FF4AC34F" Offset="0"/>
            <GradientStop Color="#FF1D211D" Offset="0.95"/>
            <!--<GradientStop Color="#FF40A8F0" Offset="0"/>
            <GradientStop Color="#FF0E0F0E" Offset="0.95"/>-->
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="MyBrushWindow2" EndPoint="0.5,0" StartPoint="0.5,1" SpreadMethod="Reflect">

                <EasingDoubleKeyFrame KeyTime="00:00:00.00" Value="0.7"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.2000000" Value="1.1"/>
                <EasingDoubleKeyFrame KeyTime="00:00:00.8000000" Value="1">

    <Window.Resources>
        <SolidColorBrush x:Key="MyDarkGreenSolidBrush" Color="#FF101D11"/>

        <SolidColorBrush x:Key="Green1" Color="#FF16A085"/>
        <SolidColorBrush x:Key="Green2" Color="#FF1ABC9C"/>

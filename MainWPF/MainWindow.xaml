        </Storyboard>
        <Storyboard x:Key="sbSlideUp" Duration="0:0:1.2" Completed="Storyboard_Completed">
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="grdTop" Storyboard.TargetProperty="Height" To="30"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="grdBottom" Storyboard.TargetProperty="Height" To="30"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="imgLogo" Storyboard.TargetProperty="Opacity" To="0"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="txtSlogan" Storyboard.TargetProperty="Opacity" To="0"/>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="tcMain" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value=".3"/>
                <EasingDoubleKeyFrame Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuinticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="tcMain" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame Value="1">
                    <EasingDoubleKeyFrame.EasingFunction>
                        <QuinticEase EasingMode="EaseIn"/>
                    </EasingDoubleKeyFrame.EasingFunction>
                </EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sbSlideDown" Duration="0:0:1" Completed="Storyboard_Completed">
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="grdTop" Storyboard.TargetProperty="Height" To="150"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="grdBottom" Storyboard.TargetProperty="Height" To="150"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="imgLogo" Storyboard.TargetProperty="Opacity" To="1"/>
            <DoubleAnimation Duration="0:0:1" Storyboard.TargetName="txtSlogan" Storyboard.TargetProperty="Opacity" To="1"/>

            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="tcMain" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                <EasingDoubleKeyFrame Value="0"></EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
            <DoubleAnimationUsingKeyFrames Storyboard.TargetName="tcMain" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                <EasingDoubleKeyFrame Value="0"></EasingDoubleKeyFrame>
            </DoubleAnimationUsingKeyFrames>
        </Storyboard>
        <Storyboard x:Key="sbHideButtons">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0" To="1" Storyboard.TargetName="btnSettings" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.0" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnSearch" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.2" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnAddFamily" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.4" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnOrphans" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.6" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnSystem" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.8" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnInventory" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:1.0" Duration="0:0:0.2" From="1" To="0" Storyboard.TargetName="btnSettings" Storyboard.TargetProperty="Opacity"/>
        </Storyboard>
        <Storyboard x:Key="sbShowButtons">
            <DoubleAnimation BeginTime="0:0:0" Duration="0:0:0" To="0" Storyboard.TargetName="btnSettings" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.0" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnSearch" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.2" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnAddFamily" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.4" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnOrphans" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.6" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnSystem" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:0.8" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnInventory" Storyboard.TargetProperty="Opacity"/>
            <DoubleAnimation BeginTime="0:0:1.0" Duration="0:0:0.2" From="0" To="1" Storyboard.TargetName="btnSettings" Storyboard.TargetProperty="Opacity"/>
        </Storyboard>
        <Style x:Key="XStyle" TargetType="{x:Type Button}">
            <Setter Property="FontFamily" Value="{StaticResource MyFontFamily}"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Foreground" Value="AliceBlue"/>
            <Setter Property="Opacity" Value="0"/>
            <Setter Property="IsEnabled" Value="False"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid Margin="7">
                            <Grid.RowDefinitions>
                                <RowDefinition/>
                                <RowDefinition Height="40"/>
                            </Grid.RowDefinitions>
                            <Border Background="{StaticResource MyDarkGreenSolidBrush}" Margin="7" CornerRadius="30" RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Border.RenderTransform>
                                <Border.Triggers>
                                    <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                        <BeginStoryboard>
                                            <Storyboard>

                                                <!--<DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.2" Duration="0:0:0.15" />
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.2" Duration="0:0:0.15"/>-->
                                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)">
                                                    <SplineDoubleKeyFrame KeySpline="0.5,0,0.5,1" KeyTime="00:00:00.1000000" Value="1.2"/>
                                                </DoubleAnimationUsingKeyFrames>
                                                <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)">
                                                    <SplineDoubleKeyFrame KeySpline="0.5,0,0.5,1" KeyTime="00:00:00.1000000" Value="1.2"/>
                                                </DoubleAnimationUsingKeyFrames>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                    <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1" Duration="0:0:0.15" />
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1" Duration="0:0:0.15" />
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Border.Triggers>
                                <Border.Effect>
                                    <DropShadowEffect ShadowDepth="2" Opacity="0.8" Color="Gray"/>
                                </Border.Effect>
                                <Image Margin="15" Width="115" RenderTransformOrigin="0.5,0.5">
                                    <Image.Source>
                                        <BitmapImage DecodePixelWidth="115" UriSource="{Binding}"></BitmapImage>
                                    </Image.Source>
                                    <Image.RenderTransform>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="0.95"/>
                                            <SkewTransform />
                                            <RotateTransform />
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Image.RenderTransform>
                                    <Image.Triggers>
                                        <EventTrigger RoutedEvent="UIElement.MouseEnter">
                                            <BeginStoryboard>
                                                <Storyboard AutoReverse="True" RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" From="0.95" To="1.05" Duration="0:0:1" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                        <EventTrigger RoutedEvent="UIElement.MouseLeave">
                                            <BeginStoryboard>
                                                <Storyboard>
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="0.95" Duration="0:0:0.3" />
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </EventTrigger>
                                    </Image.Triggers>
                                </Image>
                            </Border>
                            <TextBlock Foreground="{StaticResource MyDarkGreenSolidBrush}" Text="{TemplateBinding Content}" Grid.Row="1" Margin="0,12,0,0" HorizontalAlignment="Center" FontSize="{TemplateBinding FontSize}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="ButtonBase.Click">
                    <BeginStoryboard>
                        <Storyboard AutoReverse="True">
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" From="1" To="0" Duration="0:0:0.25" />
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="TabItemCloseButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Height" Value="17"/>
            <Setter Property="Width" Value="17"/>
            <Setter Property="IsTabStop" Value="True"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,4,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="ButtonBorder" RenderTransformOrigin="0.5,0.5">
                            <Border.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Border.RenderTransform>
                            <Grid>
                                <Ellipse x:Name="ellipes" Opacity=".81" Fill="#FFD63A00"></Ellipse>
                                <Path x:Name="ButtonPath"
                                  Stroke="White"
                    				Data="F1 M 6.742676,3.852539 L 9.110840,1.559570 L 8.910645,0.500000 L 6.838379,0.500000 L 4.902832,2.435547 L 2.967285,0.500000 L 0.895020,0.500000 L 0.694824,1.559570 L 3.062988,3.852539 L 0.527832,6.351563 L 0.689941,7.600586 L 2.967285,7.600586 L 4.897949,5.575195 L 6.854004,7.600586 L 9.115723,7.600586 L 9.277832,6.351563 L 6.742676,3.852539 Z" Fill="#FFFFFFFF"
                    				Width="10" Height="10"
                                  Stretch="Uniform"
                    				VerticalAlignment="Center"
                    				HorizontalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.05" Storyboard.TargetName="ellipes" Storyboard.TargetProperty="Opacity" To="1">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"></CubicEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.05" Storyboard.TargetName="ellipes" Storyboard.TargetProperty="Opacity" To="0.8">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"></CubicEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="true">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Duration="0:0:0.05" Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"></CubicEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                            <DoubleAnimation Duration="0:0:0.05" Storyboard.TargetName="ButtonBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.05">
                                                <DoubleAnimation.EasingFunction>
                                                    <CubicEase EasingMode="EaseIn"></CubicEase>
                                                </DoubleAnimation.EasingFunction>
                                            </DoubleAnimation>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>

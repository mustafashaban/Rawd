            <!--<GradientStop Color="White" Offset="0.1"/>
            <GradientStop Color="#FFC7F3D7" Offset="0.5"/>
            <GradientStop Color="White" Offset="0.9"/>-->
        </LinearGradientBrush>
        <Storyboard x:Key="sbStartupBtns" Completed="SbStartup_Completed">
